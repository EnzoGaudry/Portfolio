{% extends 'base.html.twig' %}

{% block title %}Show{% endblock %}

{% block body %}
    <div>
        {% for project in projects %}
        <div class="show-content">
            <div class="show-content-img">
                {% for image in images %}
                    {% if image.priority == 1 %}
                        <img src="/uploads/{{ image.poster }}">
                    {% endif %}
                {% endfor %}
            </div>
            <h3>{{ project.name }}</h3>
            <p>{{ project.description }}</p>
            <div class="gallery">
                {% for image in images %}
                    {% if image.priority == 2 %}
                        <img src="/uploads/{{ image.poster }}">
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
